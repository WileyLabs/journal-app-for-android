<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomWebView">
        <attr name="encoding" format="string"/>
        <attr name="mime_type" format="string"/>
    </declare-styleable>
    <declare-styleable name="IssueView">
        <attr name="showNumOfSavedArticles" format="boolean"/>
        <attr name="showDownloadButton" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleIndexIndicator">
        <attr name="radiusNormal" format="dimension" />
        <attr name="radiusSelected" format="dimension" />
        <attr name="innerPadding" format="dimension" />
        <attr name="backgroundWidth" format="dimension" />
        <attr name="colorNormal" format="color" />
        <attr name="colorSelected" format="color" />
        <attr name="colorBackground" format="color" />
        <attr name="android:orientation"/>
        <attr name="items" format="reference"/>
    </declare-styleable>

    <attr name="mainColor" format="color" />
    <attr name="logoBottomLeft" format="reference" />
    <attr name="logoBottomRight" format="reference" />
    <attr name="actionBarTitleStyle" format="reference"/>
    <attr name="list_article_header_title_color" format="color"/>
</resources>