<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/home_quick_link_menu_button"
        style="@style/QuickLinkMenuButton"
        android:layout_height="36dp"
        android:src="@drawable/home_quick_link_menu"/>

    <ImageButton
        android:id="@+id/saved_articles_quick_link_menu_button"
        style="@style/QuickLinkMenuButton"
        android:layout_height="36dp"
        android:src="@drawable/saved_articles_quick_link_menu"/>

    <ImageButton
        android:id="@+id/search_quick_link_menu_button"
        style="@style/QuickLinkMenuButton"
        android:layout_height="36dp"
        android:src="@drawable/search_quick_link_menu"/>

    <ImageButton
        android:id="@+id/alert_quick_link_menu_button"
        android:visibility="gone"
        style="@style/QuickLinkMenuButton"
        android:layout_height="36dp"
        android:src="@drawable/alert_quick_link_menu"/>

    <ImageButton
        android:id="@+id/settings_quick_link_menu_button"
        style="@style/QuickLinkMenuButton"
        android:layout_height="36dp"
        android:src="@drawable/settings_quick_link_menu"/>
</LinearLayout>