<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/list_item_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/saved_articles_editor_delete_back">

        <TextView
            android:id="@+id/list_item_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="@string/tap_to_delete" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/list_item_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_primary_text"
            style="@style/SavedArticlesPopupText.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_secondary_text"
            style="@style/SavedArticlesPopupText.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>