<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@android:color/white"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/society_button"
                style="@style/SocietyButton"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textOff="@string/society_news"
                android:textOn="@string/society_news"/>

            <ToggleButton
                android:id="@+id/journal_button"
                style="@style/JournalButton"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textOff="@string/journal"
                android:textOn="@string/journal"/>
        </LinearLayout>

        <Button
            android:id="@+id/menu_button"
            style="@style/MenuButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainColorStub"
        android:minHeight="1dp"/>

</LinearLayout>
