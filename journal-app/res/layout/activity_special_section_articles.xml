<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/special_section_articles_content_fragment"
        android:name="com.wiley.android.journalApp.fragment.specialsection.SpecialSectionArticlesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/special_section_articles_dimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/dimmable_back" />

    <com.wiley.android.journalApp.components.popup.PopupHost
        android:id="@+id/special_section_articles_popup_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/special_section_articles_popup_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.wiley.android.journalApp.components.popup.PopupHost>

</RelativeLayout>