                    android:src="@drawable/article_bar_get_pdf" />

                <TextView
                    android:id="@+id/article_bar_pdf_text"
                    style="@style/ArticleSideMenuButtonLabel"
                    android:layout_gravity="center"
                    android:text="@string/get_PDF" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/article_side_menu_divider_height"
                android:layout_alignParentBottom="true"
                android:background="@color/article_bar_divider"/>

        </com.wiley.android.journalApp.components.checkable.CheckableRelativeLayout>

    </LinearLayout>
</ScrollView>
