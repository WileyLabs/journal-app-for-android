<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/access_popup_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparency"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/get_access_label"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="#434352" />

        <ImageButton
            android:id="@+id/btn_close_popup"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageView"
            android:background="@drawable/close_button"
            android:layout_margin="10dp"
            android:contentDescription="@string/close" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="7dp"
            android:background="@drawable/horizontal_line"
            android:contentDescription="@string/delimeter" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="60dp"
            android:background="@drawable/get_access_screen_image"
            android:contentDescription="" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_below="@+id/imageView"
            android:layout_marginRight="17dp"
            android:layout_marginTop="50dp"
            android:text="@string/get_access_question_text"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="#434352" />

        <ImageButton
            android:id="@+id/authorizeButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/access_button_have_access"
            android:contentDescription="" />

        <ImageButton
            android:id="@+id/subscriptionButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/authorizeButton"
            android:layout_below="@+id/authorizeButton"
            android:layout_marginTop="22dp"
            android:background="@drawable/access_button_buy_subscription"
            android:contentDescription="" />

        <ImageButton
            android:id="@+id/browseFreeContentButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/subscriptionButton"
            android:layout_below="@+id/subscriptionButton"
            android:layout_marginTop="28dp"
            android:background="@drawable/access_button_free_content"
            android:contentDescription="" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/browseFreeContentButton"
            android:layout_marginTop="20dp"
            android:text="For more information, visit"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="http://olabout.wiley.com/go/apps"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="#002bff" />

    </RelativeLayout>

</RelativeLayout>