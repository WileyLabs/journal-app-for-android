<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/seek_bar_background">

    <com.wiley.android.journalApp.widget.SeekBarCompat
        android:id="@+id/seek_bar"
        android:progressDrawable="@drawable/article_view_page_indicator_progress_horizontal"
        android:thumb="@drawable/article_view_page_indicator_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:progress="50"
        android:max="100"/>

</FrameLayout>